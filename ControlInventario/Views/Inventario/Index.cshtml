@model IEnumerable<ControlInventario.Models.Producto>

@{
    ViewBag.Title = "Listado Productos";
}

<h2>Inventario</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            Empresa
        </th>
        <th>
            Producto
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Caracteristicas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        @*<th></th>*@
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Empresa.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Caracteristicas)
            </td>
            <td>
                @String.Format("{0:C}", item.Precio)
            </td>
            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Codigo }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Codigo }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Codigo })
                </td>*@

        </tr>
    }

</table>

<form action="@Url.Action("generarPDF", "Inventario")" method="get">
    <button type="submit">Generar PDF</button>
</form>
