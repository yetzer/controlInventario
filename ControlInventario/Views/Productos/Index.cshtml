@model IEnumerable<ControlInventario.Models.Producto>

@{
    ViewBag.Title = "Productos";
}

<h2>Productos</h2>

<p>
    @Html.ActionLink("Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Empresa
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Caracteristicas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
           Categorias
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Empresa.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Caracteristicas)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Precio, "{0:C}")*@
            @String.Format("{0:C}", item.Precio)
        </td>
        <td>
            @foreach (var cat in item.Categorias)
            {
                @Html.DisplayFor(modelItem => cat.Nombre) 
            }

        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Codigo }) |
            @Html.ActionLink("Detalle", "Details", new { id = item.Codigo }) 
            @*|
            @Html.ActionLink("Delete", "Delete", new { id = item.Codigo })*@
        </td>
        
    </tr>
}

</table>
